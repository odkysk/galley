{
  "name": "@galley/core",
  "version": "1.0.0",
  "type": "module",
  "description": "Core library for building banner and image generation applications",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./components": {
      "types": "./dist/lib/components/index.d.ts",
      "svelte": "./dist/lib/components/index.js",
      "import": "./dist/lib/components/index.js"
    },
    "./models": {
      "types": "./dist/lib/models/index.d.ts",
      "import": "./dist/lib/models/index.js"
    },
    "./utils": {
      "types": "./dist/lib/utils/index.d.ts",
      "import": "./dist/lib/utils/index.js"
    },
    "./config": {
      "types": "./dist/lib/config/index.d.ts",
      "import": "./dist/lib/config/index.js"
    },
    "./styles": "./dist/styles.css"
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "dev": "svelte-package -w",
    "build": "svelte-kit sync && svelte-package && tsc --emitDeclarationOnly",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "clean": "rm -rf dist .svelte-kit"
  },
  "peerDependencies": {
    "@sveltejs/kit": "^2.0.0",
    "svelte": "^5.0.0",
    "tailwindcss": "^4.0.0"
  },
  "dependencies": {
    "@lucide/svelte": "^0.541.0",
    "bits-ui": "^2.9.4",
    "clsx": "^2.1.1",
    "html2canvas-pro": "^1.5.11",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^1.0.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^6.0.0",
    "@sveltejs/kit": "^2.22.0",
    "@sveltejs/package": "^2.3.7",
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2",
    "vite": "^7.0.4"
  }
}